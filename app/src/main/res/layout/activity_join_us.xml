<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_join_us"
    tools:context=".activities.JoinUsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <com.netclan.task.controls.TextBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join As"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_marginBottom="55dp"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvIndividual"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="7dp"
                    app:cardElevation="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingVertical="7dp"
                        android:paddingStart="65dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/click_react">

                        <com.netclan.task.controls.TextMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Individual"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"/>
                        <com.netclan.task.controls.TextRegular
                            android:id="@+id/tvFirstDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join and build real time community"
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_supervisor_account_24"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProfessional"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="7dp"
                    app:cardElevation="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:background="@drawable/click_react"
                        android:paddingVertical="7dp"
                        android:paddingStart="65dp"
                        android:paddingEnd="12dp">

                        <com.netclan.task.controls.TextMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"/>
                        <com.netclan.task.controls.TextRegular
                            android:id="@+id/tvSecDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="World's largest real time services community"
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/business_center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMerchant"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="7dp"
                    app:cardElevation="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingVertical="7dp"
                        android:paddingStart="65dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/click_react">

                        <com.netclan.task.controls.TextMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merchant"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"/>
                        <com.netclan.task.controls.TextRegular
                            android:id="@+id/tvThirdDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="World's largest real time merchant's community"
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_storefront_24"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>